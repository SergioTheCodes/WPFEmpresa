<Window x:Class="Users.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Users"
        mc:Ignorable="d"
        Title="Registro" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">
                <Button Content="Usuarios" x:Name="btnToUsuariosPage" Click="btnToUsuariosPage_Click" Width="150" HorizontalAlignment="Center" Background="White"/>
                <Button Content="Area" x:Name="btnToAreaPage" Click="btnToAreaPage_Click" Width="150" Background="White"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Background="BlanchedAlmond">
            <StackPanel>
            <Frame x:Name="Main"/>
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>

<Page x:Class="Users.Views.ListUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Users.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListUsers">
    <ListView>
        <ListView.View>
    <GridView>        
            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Path=nombre}"></GridViewColumn>
                <GridViewColumn Header="DNI" DisplayMemberBinding="{Binding Path=Documento}"></GridViewColumn>
                <GridViewColumn Header="Tipo DNI" DisplayMemberBinding="{Binding Path=TipoDocumento}"></GridViewColumn>
                <GridViewColumn Header="Posicion" DisplayMemberBinding="{Binding Path=Cargo}"></GridViewColumn>
                <GridViewColumn Header="Area" DisplayMemberBinding="{Binding Path=area}"></GridViewColumn>
                <GridViewColumn Header="Editar"></GridViewColumn>
                <GridViewColumn Header="Eliminar"></GridViewColumn>
    </GridView>
        </ListView.View>
    </ListView>
</Page>
